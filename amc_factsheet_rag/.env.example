# AMC Factsheet RAG - Environment Variables
# ============================================

# Hugging Face (Required for LLM access)
HF_TOKEN=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

# ============ Qdrant Configuration ============
# Option A: Cloud Qdrant (Recommended for production)
# QDRANT_COLLECTION=factsheets
# QDRANT_LOCAL_PATH=./qdrant_local

# Option B: Local Qdrant (Development)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_LOCAL_PATH=./qdrant_local

# ============ Redis Configuration ============
# Option A: External Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# Option B: Modal KV (if using Modal)
# Will be auto-configured in Modal

# ============ Model Configuration ============
EMBED_MODEL=BAAI/bge-small-en-v1.5
RERANKER_MODEL=BAAI/bge-reranker-base
LLAMA_MODEL=meta-llama/Llama-3.1-8B-Instruct
LLAMA_DEVICE=cuda

# Quantization (Recommended for L40S)
USE_4BIT_QUANT=true

# ============ Generation Parameters ============
MAX_NEW_TOKENS=512
TEMPERATURE=0.3
TOP_P=0.9

# ============ Retrieval Parameters ============
TOP_K=20
RERANK_TOP_N=5

# ============ Chunking Parameters ============
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# ============ Conversation Parameters ============
MAX_HISTORY_TURNS=5
MEMORY_WINDOW_TOKENS=2048

# ============ PDF Processing ============
TEMP_DIR=/tmp/factsheets
MAX_PDF_SIZE_MB=50
USE_OCR=true
OCR_LANG=en

# ============ API Configuration ============
DEBUG=false